    <attnum name="size large" val="10"/>
    <attnum name="size medium" val="6"/>
    <attnum name="size small" val="5"/>
  </section>

  <section name="Digital Font">
    <attstr name="name" val="digital.glf"/>
    <attnum name="size big" val="6"/>
  </section>

  <section name="Mouse Pointer">
