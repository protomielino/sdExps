Summary: Speed Dreams - Simplix Robots
Name: speed-dreams-robots-simplix
Version: @VERSION@
Release: 1
Epoch: 4
Source:  speed-dreams-%{version}-src.tgz
Source1: speed-dreams-%{version}-src-robots-simplix.tgz
Group: Amusements/Games
BuildRoot: %{_tmppath}/%{name}-buildroot
Copyright: GPL
BuildArch: i386
URL: http://speed-dreams.sourceforge.net
Packager: Xavier Bertaux <bertauxx@yahoo.fr>
Requires: speed-dreams

%description
Simplix Robots for TORCS NG
by Wolf-Dieter Beelitz <wdb@wdbee.de>

%prep
%setup -n speed-dreams-@VERSION@
%setup -T -D -b 1 -n speed-dreams-@VERSION@
cd $RPM_BUILD_DIR/speed-dreams-@VERSION@/src/drivers
rm -rf human

%build
export TORCSNG_BASE=`pwd` MAKE_DEFAULT=`pwd`/Make-default.mk
./configure --prefix=%{_prefix}
make

%install
make install DESTDIR=%{_tmppath}/%{name}-ship
cd %{_tmppath}/%{name}-ship/%{_prefix}/share/games/speed-dreams
mkdir -p $RPM_BUILD_ROOT/%{_prefix}/share/games/speed-dreams
cp -r drivers $RPM_BUILD_ROOT/%{_prefix}/share/games/speed-dreams
cd -
cd %{_tmppath}/%{name}-ship/%{_prefix}/lib/speed-dreams
mkdir -p $RPM_BUILD_ROOT/%{_prefix}/lib/speed-dreams
cp -r drivers $RPM_BUILD_ROOT/%{_prefix}/lib/speed-dreams
cd -
rm -rf %{_tmppath}/%{name}-ship

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root,-)
%{_prefix}/share/games/speed-dreams/*
%{_prefix}/lib/speed-dreams/*

