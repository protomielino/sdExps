<!DOCTYPE params SYSTEM "params.dtd">


<params name="ls1-cavallo-570s1">
  <section name="Front Wing">
    <attnum name="angle" unit="deg" val="21"/>
  </section>

  <section name="Rear Wing">
    <attnum name="angle" unit="deg" val="20.2"/>
  </section>

  <section name="Rear Differential">
    <attstr name="type" in="LIMITED SLIP" val="LIMITED SLIP"/>
    <attnum name="ratio" val="3.7"/>
  </section>

  <section name="Brake System">
    <attnum name="front-rear brake repartition" val="0.57"/>
    <attnum name="max pressure" unit="kPa" val="45300"/>
  </section>

  <section name="Front Anti-Roll Bar">
    <attnum name="spring" unit="lbs/in" val="2500"/>
  </section>

  <section name="Rear Anti-Roll Bar">
    <attnum name="spring" unit="lbs/in" val="2490"/>
  </section>

  <section name="Front Right Suspension">
    <attnum name="bellcrank" val="1.22"/>
  </section>

  <section name="Front Left Suspension">
    <attnum name="bellcrank" val="1.22"/>
  </section>

  <section name="Rear Right Suspension">
    <attnum name="bellcrank" val="1.475"/>
  </section>

  <section name="Rear Left Suspension">
    <attnum name="bellcrank" val="1.475"/>
  </section>

  <section name="simplix private">
    <attnum name="pit test stop" min="0" max="1" val="0"/>
    <attnum name="qualification" val="0"/>
    <attnum name="reserve" min="0" max="20000" unit="m" val="2000"/>
    <attnum name="start fuel" min="-1" max="60" val="-1"/>
    <attnum name="fuelper100km" min="1" max="100" val="80"/>
    <attnum name="lookaheadfactor" val="0.09"/>
    <attnum name="scale bump" val="0.038"/>
    <attnum name="scale bump outer" val="0.057"/>
    <attnum name="scale brake" val="1.28"/>
    <attnum name="scale mu" val="1.27"/>
    <attnum name="scale brake rain" min="0" max="1" val="1"/>
    <attnum name="scale mu rain" min="0" max="5" val="1"/>
    <attnum name="qualy brake" val="1.35"/>
    <attnum name="qualy mu" val="1.31"/>
  </section>

</params>

